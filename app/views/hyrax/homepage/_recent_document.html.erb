<li class="recent-item">
    <div class="row">
      <div class="col-sm-12">
        <span class="sr-only"><%= t('hyrax.homepage.recently_uploaded.document.title_label') %></span>
        <h3>
          <%= link_to [main_app, recent_document] do %>
            <%= render_thumbnail_tag(recent_document, {width: 90, alt: "#{recent_document} #{ t('hyrax.homepage.admin_sets.thumbnail')}" }, {suppress_link: true}) %><%= recent_document %>
          <% end %>
        </h3>
        <% unless recent_document.creator&.empty? %>
          <p class="recent-field">
            <span class="recent-label">Creator:</span> <%= recent_document.creator&.join('; ') %>
          </p>
        <% end %>
        <% unless recent_document.date_created&.empty? %>
          <p class="recent-field">
            <span class="recent-label">Date Created:</span> 
            <% if recent_document.human_readable_type == "Etd" %>
              <%# ETDs are expected to have one date %>
              <%= recent_document.date_created&.join('').slice(0, 4) %>
            <% else %>
              <%# For any other work type, allow multiple dates %>
              <%= recent_document.date_created&.join("; ") %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
</li>